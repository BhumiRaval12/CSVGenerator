 <html>
 <!-- include header  -->
 <%- include('../partials/header', { pageTitle: "Add Course :: Course Management" }) %>
 <!-- include header  -->



 <script type="text/javascript">
   function alrtmsg() {
     alert("you have successfully updated items..Thank You!!..:)");
   }
 </script>


 <body>
   <!-- include navbar -->
   <%- include('../partials/navbar') %>
   <!-- /include navbar -->
   <div class="container">


     <!-- include footer -->
     <%- include('../partials/footer') %>
     <!-- /include footer -->

     <div class="h2 text-center m-4 text-danger">
       Edit your Course here
     </div>

     <form method="POST" class="thead-dark" action="/edit" id="editform">

       <div class="form-group">
         <input type='number' class="form-control" name='id' hidden value='<%=Courses.id%>'></div>

       <div class="form-group">
         <label for="inputCName">Course-Name</label>
         <input type="text" class="form-control" name="C_Name" id="inputCName" value='<%=Courses.Course_name%>'
           placeholder="Course-Name" autofocus required>

       </div>
       <div class="form-group">
         <label for="inputCDuration">Course-Duration</label>
         <input type="text" class="form-control" name="C_dur" id="inputC_duration" value='<%=Courses.Course_Duration%>'
           placeholder="Course-Duration" required>
       </div>
       <div class="form-group">
         <label for="inputfees">Course-Fees:</label>
         <input type="number" class="form-control" name="C_Fees" id="inputC_Fees" value='<%=Courses.Course_Fees%>'
           placeholder="Course-Fees" required>
       </div>

       <button class="btn btn-success my-4 col-12" id="adbtn" class=" text-center" onclick="alrtmsg();"
         type="submit">Update</button>
     </form>
   </div>
   </div>





 </body>

 </html>