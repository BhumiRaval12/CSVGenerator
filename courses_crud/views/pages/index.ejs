<html>

<head>
  <!-- include header -->
  <%- include('../partials/header', { pageTitle: "Home  : Course Management" }) %>
  <!-- /include header -->

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
    crossorigin="anonymous" />
</head>

<body class="container">
  <div>
    <!-- include navbar -->
    <%- include('../partials/navbar') %>
    <!-- /include navbar -->
  </div>

  <!-- front page table -->
  <!-- form handling -->
  <!-- typeof courses != "undefined" -->

  <table class="table" id="table_ID">
    <thead class="thead-dark" method='get'>
      <tr>
        <th>ID</th>
        <th>Course-Name</th>
        <th>Duration</th>
        <th>Fees</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% 
                    
                    
      courses.forEach((value)=>{
                      %>
      <tr>
        <td><%= value.id%></td>
        <td><%= value.Course_name%></td>
        <td><%= value.Course_Duration%></td>
        <td><%= value.Course_Fees%></td>
        <td>
          <a href="/edit/<%=value.id%>">
            <span class='text-gradient'><i class='fas fa-pencil-alt'>
              </i></span></a>
          <a href='/delete/<%=value.id%>' onclick="return confirm('Are you sure you want to delete this item?');"
            class="btn border-shadow delete">
            <span class='text-gradient' id='del-btn'><i class='fas fa-trash'></i></span></a>
        </td>
      </tr>
      <%
        })
        %>
    </tbody>
  </table>

